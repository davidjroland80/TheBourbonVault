<body>

  <header>
    <h1>My Bourbon Vault</h1>
    <p class="subtitle">Real-time tasting journal — every pour saved forever</p>
  </header>

  <div class="container">
    <div class="reviews-grid" id="reviewsGrid">
      <!-- Firebase data loads here -->
    </div>
  </div>

  <button class="add-btn" onclick="openModal()">+</button>

  <!-- Add Tasting Modal -->
  <div id="addModal" class="modal">
    <div class="modal-content">
      <span class="close" onclick="closeModal()">&times;</span>
      <h2>Add New Tasting</h2>
      <form id="tastingForm">
        <label>Bourbon Name *</label>
        <input type="text" id="bourbon" required>

        <label>Distillery *</label>
        <input type="text" id="distillery" required>

        <label>Bottle Image URL (optional)</label>
        <input type="url" id="image" placeholder="https://...">

        <label>Proof</label>
        <input type="text" id="proof" placeholder="e.g. 114 proof">

        <label>Age</label>
        <input type="text" id="age" placeholder="e.g. 12 years or NAS">

        <label>Mash Bill (optional)</label>
        <input type="text" id="mashbill" placeholder="e.g. 75/15/10 or Wheated">

        <label>Rating (1–5 stars)</label>
        <select id="rating">
          <option>★★★★★</option>
          <option>★★★★☆</option>
          <option>★★★☆☆</option>
          <option>★★☆☆☆</option>
          <option>★☆☆☆☆</option>
        </select>

        <label>Nose</label>
        <textarea id="nose" rows="2"></textarea>

        <label>Palate</label>
        <textarea id="palate" rows="2"></textarea>

        <label>Finish</label>
        <textarea id="finish" rows="2"></textarea>

        <label>Personal Notes</label>
        <textarea id="notes" rows="3" placeholder="Barrel #, dump date, occasion..."></textarea>

        <button type="submit">Save to Vault</button>
      </form>
    </div>
  </div>

  <!-- Firebase SDKs -->
  <script type="module">
    import { initializeApp } from "https://www.gstatic.com/firebasejs/10.14.1/firebase-app.js";
    import { getDatabase, ref, push, onValue, remove } from "https://www.gstatic.com/firebasejs/10.14.1/firebase-database.js";

    const firebaseConfig = {
      apiKey: "AIzaSyAWhivu2HR_6epguOnwxvu7Nfsu1OYKESA",
      authDomain: "bourbon-vault.firebaseapp.com",
      databaseURL: "https://bourbon-vault-default-rtdb.firebaseio.com",
      projectId: "bourbon-vault",
      storageBucket: "bourbon-vault.firebasestorage.app",
      messagingSenderId: "1013190214804",
      appId: "1:1013190214804:web:594665cae3a79a3451a081"
    };

    const app = initializeApp(firebaseConfig);
    const db = getDatabase(app);
    const tastingsRef = ref(db, 'tastings');

    const grid = document.getElementById('reviewsGrid');

    // Load and listen for new/updated tastings
    onValue(tastingsRef, (snapshot) => {
      const data = snapshot.val();
      grid.innerHTML = '';
      if (!data) {
        grid.innerHTML = '<p style="text-align:center; grid-column:1/-1; font-size:1.2rem; color:#888;">No tastings yet — add your first pour!</p>';
        return;
      }

      // Sort by date (newest first)
      Object.keys(data)
        .map(key => ({ id: key, ...data[key] }))
        .sort((a, b) => (b.date || 0) - (a.date || 0))
        .forEach(t => {
          const card = document.createElement('div');
          card.className = 'review-card';
          card.innerHTML = `
            <img src="${t.image || 'https://images.unsplash.com/photo-1578916171728-46686eac8d58?ixlib=rb-4.0.3&auto=format&fit=crop&q=80'}" 
                 alt="${t.bourbon}" class="bottle-img" onerror="this.src='https://images.unsplash.com/photo-1578916171728-46686eac8d58?ixlib=rb-4.0.3&auto=format&fit=crop&q=80'">
            <div class="card-body">
              <h2 class="bourbon-name">${t.bourbon}</h2>
              <p class="distillery">${t.distillery}</p>
              <div class="rating">${t.rating || '★★★★☆'}</div>
              <div class="details">
                <div><strong>Proof:</strong> ${t.proof || '—'}</div>
                <div><strong>Age:</strong> ${t.age || '—'}</div>
                <div><strong>Mash Bill:</strong> ${t.mashbill || '—'}</div>
                <div><strong>Tasted:</strong> ${t.date ? new Date(t.date).toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' }) : '—'}</div>
              </div>
              <p class="notes">
                ${t.nose ? `<strong>Nose:</strong> ${t.nose}<br><br>` : ''}
                ${t.palate ? `<strong>Palate:</strong> ${t.palate}<br><br>` : ''}
                ${t.finish ? `<strong>Finish:</strong> ${t.finish}<br><br>` : ''}
                ${t.notes ? `<strong>Notes:</strong> ${t.notes}` : ''}
              </p>
            </div>
          `;
          grid.appendChild(card);
        });
    });

    // Modal controls
    const modal = document.getElementById('addModal');
    window.openModal = () => modal.style.display = 'block';
    window.closeModal = () => {
      modal.style.display = 'none';
      document.getElementById('tastingForm').reset();
    };
    window.onclick = (e) => { if (e.target === modal) closeModal(); };

    // Submit new tasting
    document.getElementById('tastingForm').addEventListener('submit', (e) => {
      e.preventDefault();
      const newTasting = {
        bourbon: document.getElementById('bourbon').value,
        distillery: document.getElementById('distillery').value,
        image: document.getElementById('image').value || null,
        proof: document.getElementById('proof').value || null,
        age: document.getElementById('age').value || null,
        mashbill: document.getElementById('mashbill').value || null,
        rating: document.getElementById('rating').value,
        nose: document.getElementById('nose').value || null,
        palate: document.getElementById('palate').value || null,
        finish: document.getElementById('finish').value || null,
        notes: document.getElementById('notes').value || null,
        date: Date.now()
      };

      push(tastingsRef, newTasting)
        .then(() => {
          alert('Pour saved to the vault!');
          closeModal();
        })
        .catch((error) => {
          alert('Error: ' + error.message);
        });
    });
  </script>
</body>
</html>
